{
  "name": "git-stash-manager",
  "displayName": "Git Stash Manager",
  "description": "A lightweight Git stash manager for VS Code that lets you view, apply, and drop stashes directly from the sidebar.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:stashExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "stashExplorer",
          "name": "Stashes"
        }
      ]
    },
    "commands": [
      {
        "command": "git-stash-manager.applyStash",
        "title": "Apply"
      },
      {
        "command": "git-stash-manager.popStash",
        "title": "Pop"
      },
      {
        "command": "git-stash-manager.dropStash",
        "title": "Drop"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "git-stash-manager.applyStash",
          "when": "view == stashExplorer && viewItem == stashItem",
          "group": "inline"
        },
        {
          "command": "git-stash-manager.popStash",
          "when": "view == stashExplorer && viewItem == stashItem",
          "group": "inline"
        },
        {
          "command": "git-stash-manager.dropStash",
          "when": "view == stashExplorer && viewItem == stashItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "simple-git": "^3.27.0"
  }
}
